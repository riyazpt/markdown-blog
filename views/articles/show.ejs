<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Article</title>
  </head>
  <body>
    <div class="container mx-auto w-full">
      <div class="w-full max-w-xs">
        <h1 class="text-gray-900 font-bold text-xl mb-4">
          <%=article.title %>
        </h1>
        <%

const hasTitle = article.santizedMarkDown.includes('<h1>');
const hasParagraph = article.santizedMarkDown.includes('<p>');
%>
        <div class="mb-4"> <% if (hasTitle) { %>
        <h1 class="text-4xl font-bold"> <%= article.santizedMarkDown %> </h1>
    <% } %>

    </div>
        <a
          href="/"
          class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 m-2 px-4 rounded focus:outline-none focus:shadow-outline"
        >
          Read More
        </a>
        <a
           href="/articles/edit/<%=article.id %>"
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        >
          Edit
        </a>
      </div>
    </div>
  </body>
</html>
